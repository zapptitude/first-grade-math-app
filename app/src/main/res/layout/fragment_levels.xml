<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.LevelsFragment"
    android:background="@color/white_overlay">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/apple_green"
            android:id="@+id/apple_green"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/ready"
            android:id="@+id/ready"
            android:layout_below="@id/apple_green"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/level1"
            android:text="Level 1"
            android:layout_below="@id/ready"
            android:layout_centerInParent="true"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/level2"
            android:text="Level 2"
            android:layout_below="@id/level1"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</FrameLayout>